<h1>Pagina di creazione outfit </h1>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<%= javascript_include_tag "outfit_new" %>

<div class = "grid">

    <div class="search">
        <%= search_form_for(@q, url: outfits_new_path,method: :get) do |form| %>
            <%= form.search_field :nome_cont ,placeholder: "Search name...",id: "nome-cont" %>
            <br>
            <%= form.search_field :categoria_cont ,placeholder: "Search category...",id: "categoria-cont"%>
            <br>
            <%= form.submit "Search!", id:"search-btn"%>
        <% end %>

        <br>

        <div id="capos">
            <% @capos.each do |capo| %>
                <table>
                    <tr>
                        <td id=<%=capo.immagine%>><p><%= image_tag(capo.immagine, size: "130") %></p></td>
                        <td><%=capo.nome%><br/><br/><button  class = "add-btn" id = <%=capo.id%>>Add to outfit</button></td>
                    </tr>
                </table>
            <% end %>
        </div>
    </div>

    <div class="creation-form">
        <%= form_with(model: @outfit ,url:outfits_new_path)  do |form| %>
            <div class="field">
                <div class = "field-item">
                    <%= form.label :Name, style: "display: block" %>
                    <%= form.text_field :name, id:"name",required: true %>
                </div>

                <div class = "field-item">
                    <%= form.label :Description, style: "display: block" %>
                    <%= form.text_field :description, id:"description",required: true%>
                </div>
                
            </div>

            <div class = "field capos-list">
            
            </div>

            <div>
                <%= form.submit(id:"submit-btn")%>
            </div>
        <% end %>
    </div>
</div>
