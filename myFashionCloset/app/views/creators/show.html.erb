<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<%= javascript_include_tag "creator_show" %>

<p style="color: green"><%= notice %></p>
<!-- <%= render @creator %> -->

<div class = "main">
    <div class = "main-header">
        <div class = "creator-info">

            <div class ="profile-pic">
                <img src="<%=(url_for(@user.avatar))%>">
            </div>

            <div class = "personal-info">
                <div class = "info-element">
                      <p>
                        <strong>First name:</strong>
                        <%= @creator.firstName %>
                    </p>
                </div>

                <div class = "info-element">
                      <p>
                        <strong>Last name:</strong>
                        <%= @creator.lastName %>
                    </p>
                </div>

                <div class = "info-element">
                      <p>
                        <strong>Style description:</strong>
                        <%= @creator.styleDesc %>
                    </p>
                </div>

            </div>

            <div class = "action" id= "<%=@creator.id%>">
                <% if @followed%>
                    <button id ="unfollow-btn">Unfollow</button>
                    <button id ="follow-btn" style = "display:none">Follow</button>

                <%else %>
                    <button id ="unfollow-btn" style = "display:none">Unfollow</button>
                    <button id ="follow-btn" >Follow</button>
                <%end%>
                <button>Report</button>
            </div>
        </div>
    </div>

    <div class = "main-content">
        <% @outfits.each do |outfit|%>
            <div class = "outfit">
                <%= outfit.name %>
            </div>
        <%end%>
    </div>
</div>